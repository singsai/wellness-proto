<%#= @team.inspect %>
<div class="page-header">
<h2><%= @team.name %>:<small> (<%= @team.memberships.count %> members) </small></h2>
<div/>
Send weigh-in reminders for:<br/>
<%= link_to 'Week 1', send_week1_reminder_admin_team_path, :class=>'btn btn-link' %> |
<%= link_to 'Week 2', send_week2_reminder_admin_team_path, :class=>'btn btn-link' %> |
<%= link_to 'Week 3', send_week3_reminder_admin_team_path, :class=>'btn btn-link' %> |
<%= link_to 'Week 4', send_week4_reminder_admin_team_path, :class=>'btn btn-link' %>

<% @team.memberships.each do |m| %>
<table class="table table-bordered table-hover table-nonfluid">
  <caption><%= "#{m.user.email} "%><%= "(#{Location.find(m.location_id).name}) " if m.location_id %></caption>
  <thead>  
  <tr>
  <th>week</th>
  <!--td width="1%">id</td--> 
  <th>weight</th>
  <th>start date</th>
  <th>end date</th>          
  </tr>
  </thead>
    <% m.weigh_ins.each do |w| %>  
    <tbody>
    <tr>
    <td><%= "#{w.week}" %> </td>
    <!--td><%#= "#{w.id}" %> </td--> 
    <td><%= w.weight %></td>
    <td><%= "#{w.start_date.in_time_zone("Eastern Time (US & Canada)").strftime('%m/%d/%Y')}" if w.start_date %> </td>
    <td><%= "#{w.end_date.in_time_zone("Eastern Time (US & Canada)").strftime('%m/%d/%Y')}" if w.end_date %> </td>                   
    </td>
    </tr>
    </tbody>
    <% end %>    
    <tr>
      <td>Average</td>
      <td><%= m.average_weight %></td>
      <td></td>
      <td></td>
    </tr>
  
<% end %>
</table>